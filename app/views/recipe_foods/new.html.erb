<h2> Add a new ingredient </h2>

<%= form_with model: @ingredient, url: recipe_recipe_foods_path(@recipe.id), local: true do |form| %>
  <div div class = "form-group" >    
    <%= form.label :quantity %>
    <%= form.number_field :quantity, autofocus: true, class: "form-control" %>
  </div>

  <div class = "form-group" >
    <%= form.label :food_id, class:"mt-2" %>
    <%= form.select :food_id, options_for_select(@available_foods.map { |food| [food.name, food.id] }), {}, class: "form-control" %> 
  </div >

  <div class = "form-group" >
    <%= form.submit "Add ingredient", class: "btn btn-primary mt-3" %>
  </div >
<% end %>
