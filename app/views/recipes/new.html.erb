<h2> Add a new recipe </h2>

<%= form_with model: @recipe, url: recipes_path, local: true do |form| %> 
  <div class = "form-group" >    
    <%= form.label :name, class:"mt-2" %>
    <%= form.text_field :name, autofocus: true, class: "form-control", placeholder:"Your dish" %>
  </div>

  <div class = "form-group" >
    <%= form.label :preparation_time, class:"mt-2" %>
    <%= form.text_field :preparation_time,autofocus: true, class: "form-control", placeholder:"Enter your preparation time" %>

  </div>

  <div class = "form-group" >
    <%= form.label :cooking_time, class:"mt-2" %>
    <%= form.text_field :cooking_time,autofocus: true, class: "form-control", placeholder:"Enter your cooking time" %>
  </div>

  <div class = "form-group" >
   <%= form.label :description, class:"mt-2" %>
   <%= form.text_area :description, autocomplete:"description", class: "form-control", placeholder:"Description" %>
   </div>

   <div class = "form-check" >
    <%= form.label :public, class:"form-check-label" %>
    <%= form.check_box :public, class: "form-check-input" %>
  </div>

  <div class = "form-group" >
    <%= form.submit "Create recipe", class: "btn btn-success mt-3" %>
  </div>
<% end %>


