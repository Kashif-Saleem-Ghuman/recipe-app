<h1 class="heading"> Shopping List</h1>

<div class="d-flex justify-content-around">
<div class="d-flex flex-column bd-highlight mb-3">
  <div>
    <p class="fs-2"> Amount of Food to buy: <%=@foods.length%></p>
  </div>
  <div>
    <p class="fs-2"> Total Value: <%=@total%></p>
  </div>
</div>
<div class="d-flex flex-column bd-highlight mb-3">
  <div>
    <p class="fs-2"> Recipe: <%=params[:recipe_id]%></p>
  </div>
  <div>
    <p class="fs-2"> Inventory: <%=params[:inventory_id]%></p>
  </div>
</div>


</div>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
        <th >Food</th>
        <th>Quantity</th>
        <th>Price</th>
        </tr>
    </thead>

    <tbody>
    <% @foods.each_with_index do |food, i|%>
    <tr>
      <td><%= food %></th>
      <td><%= @quantity[i][0]  %></th>
      <td><%= @quantity[i][0].to_i * @quantity[i][1].to_i %></th>
    </tr>
    <% end %>
    </tbody>
</table>

</div> 